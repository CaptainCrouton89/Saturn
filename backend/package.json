{
  "name": "saturn-backend",
  "version": "1.0.0",
  "description": "Backend API for Cosmo AI Companion",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --clear src/index.ts",
    "worker": "ts-node-dev --respawn --transpile-only --clear src/worker.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:worker": "node dist/worker.js",
    "type-check": "tsc --noEmit",
    "db:pull": "mkdir -p src/types && supabase gen types typescript --linked > src/types/database.types.ts",
    "db:init-neo4j": "node scripts/init-neo4j.js"
  },
  "keywords": [
    "express",
    "typescript",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@langchain/core": "^1.0.3",
    "@langchain/langgraph": "^1.0.1",
    "@langchain/openai": "^1.0.0",
    "@neo4j/graphql": "^7.3.0",
    "@supabase/supabase-js": "^2.80.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "neo4j-driver": "^6.0.1",
    "openai": "^6.8.1",
    "pg-boss": "^12.0.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.5",
    "@types/uuid": "^11.0.0",
    "dotenv-cli": "^11.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
